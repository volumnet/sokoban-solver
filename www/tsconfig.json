{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["react"],
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["./dev/src/*"]
    },
  },
  "include": ["./dev/src/**/*"]
}